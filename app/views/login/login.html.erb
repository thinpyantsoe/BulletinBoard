<div class="pt-5">
  <h1 class="text-center">Log In</h1>
  <div class="container">
    <div class="row">
      <div class="card col-md-5 mx-auto round_corner">
        <div class="card-body">
          <% if @errors %>
            <%= @errors.inspect %>
          <% end %>
          <%= form_with(scope: :session, url: login_path) do |form| %>
            <div class="form-group">
              <%= form.label :email, class: "required" %><br />
              <%= form.email_field :email, class: "form-control" %>
              <% if @errors %>
                <%= @errors.inspect %>
              <% end %>
            </div>

            <div class="form-group">
              <%= form.label :password, class: "required" %><br />
              <%= form.password_field :password, class: "form-control" %>
              <%= link_to "Forget?", new_password_reset_path, class: "ml-auto border-link small-xl" %>
            </div>

            <div class="form-group pt-1">
              <%= form.submit "Log in", class: "btn btn-primary btn-block" %>
            </div>

            <p class="small-xl pt-3 text-center">
              <span class="text-muted">Not a member?</span>
              <%= link_to "Sign Up", new_user_users_path %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .round_corner {
    border-radius: 10px;
    box-shadow: 10px 10px 10px 10px rgb(0 0 0 / 20%)
  }
</style>