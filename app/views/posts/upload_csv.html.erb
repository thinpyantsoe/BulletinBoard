<div class="card">
  <h3 class="card-header">Upload CSV</h3>
  <div class="card-body">
    <%= form_tag import_csv_posts_path, multipart: true do |form| %>
      <div class="field form-group row">
        <div class="col-sm-2 col-form-label text-end">CSV File</div>
        <div class="col-sm-5"><%= file_field_tag :file, accept: 'text/csv', class: "form-control" %></div>
      </div>

      <div class="actions">
        <%= link_to "Download Csv Format", csv_format_posts_path(format: :csv), class:"btn btn-edit" %>
        <%= submit_tag "Upload", class: 'btn btn-secondary' %>
        <%= button_tag "Clear", class: 'btn btn-dark', type: :reset %>
      </div>
    <% end %>
  </div>
</div>